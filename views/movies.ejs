<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Player - Test Server</title>
    <link href="/css/styles.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            background: #0f172a;
            color: #e2e8f0;
            font-family: system-ui, -apple-system, sans-serif;
        }
        
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .movie-header {
            margin-bottom: 20px;
        }
        
        .movie-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .movie-info {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }
        
        .movie-poster {
            width: 200px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }
        
        .movie-details {
            flex: 1;
            min-width: 300px;
        }
        
        .movie-overview {
            line-height: 1.6;
            color: #cbd5e1;
        }
        
        .player-container {
            background: #1e293b;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
        }
        
        .server-selector {
            margin-bottom: 20px;
        }
        
        .server-selector label {
            display: block;
            margin-bottom: 8px;
            color: #94a3b8;
            font-size: 14px;
            font-weight: 500;
        }
        
        .server-select {
            width: 100%;
            padding: 12px 16px;
            background: #334155;
            border: 2px solid #475569;
            color: #e2e8f0;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .server-select:hover {
            background: #475569;
            border-color: #64748b;
        }
        
        .server-select:focus {
            outline: none;
            border-color: #3b82f6;
            background: #475569;
        }
        
        .video-frame {
            width: 100%;
            aspect-ratio: 16/9;
            border-radius: 8px;
            border: none;
            background: #000;
        }
        
        .search-container {
            margin-bottom: 30px;
        }
        
        .search-input {
            width: 100%;
            padding: 12px 20px;
            background: #1e293b;
            border: 2px solid #334155;
            border-radius: 8px;
            color: #e2e8f0;
            font-size: 16px;
        }
        
        .search-input:focus {
            outline: none;
            border-color: #3b82f6;
        }
        
        .search-results {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .movie-card {
            cursor: pointer;
            transition: transform 0.2s;
        }
        
        .movie-card:hover {
            transform: scale(1.05);
        }
        
        .movie-card img {
            width: 100%;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }
        
        .movie-card-title {
            margin-top: 8px;
            font-size: 14px;
            text-align: center;
        }
        
        .loading {
            text-align: center;
            padding: 40px;
            font-size: 18px;
            color: #64748b;
        }
        
        .error {
            background: #991b1b;
            color: #fecaca;
            padding: 20px;
            border-radius: 8px;
            margin: 20px 0;
        }
        
        .badge {
            display: inline-block;
            padding: 4px 12px;
            background: #334155;
            border-radius: 4px;
            font-size: 14px;
            margin-right: 8px;
            margin-bottom: 8px;
        }
        
        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            
            .movie-title {
                font-size: 1.5rem;
            }
            
            .movie-header h1 {
                font-size: 1.5rem;
            }
            
            .movie-header p {
                font-size: 14px;
            }
            
            .search-input {
                padding: 10px 16px;
                font-size: 14px;
            }
            
            .search-results {
                grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
                gap: 15px;
            }
            
            .movie-card-title {
                font-size: 12px;
            }
            
            .movie-info {
                flex-direction: column;
            }
            
            .movie-poster {
                width: 100%;
                max-width: 300px;
                margin: 0 auto;
            }
            
            .server-select {
                padding: 10px 14px;
                font-size: 14px;
            }
            
            .player-container {
                padding: 15px;
            }
            
            .badge {
                font-size: 12px;
                padding: 3px 10px;
            }
            
            .loading {
                padding: 30px;
                font-size: 16px;
            }
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 10px;
            }
            
            .movie-title {
                font-size: 1.25rem;
            }
            
            .movie-header h1 {
                font-size: 1.25rem;
            }
            
            .search-results {
                grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
                gap: 10px;
            }
            
            .player-container {
                padding: 10px;
            }
            
            .movie-overview {
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="movie-header">
            <h1 class="movie-title">Movie Server Test Page</h1>
            <p style="color: #94a3b8;">Search for movies and test different streaming servers (using TMDB ID)</p>
        </div>
        
        <div class="search-container">
            <input 
                type="text" 
                id="searchInput" 
                class="search-input" 
                placeholder="Search for movies..."
            />
            <div id="searchResults" class="search-results"></div>
        </div>
        
        <div id="playerSection" style="display: <%= movieId ? 'block' : 'none' %>;">
            <div class="player-container">
                <div class="server-selector">
                    <label for="serverSelect">Select Server:</label>
                    <select id="serverSelect" class="server-select">
                        <!-- Server options will be populated by JavaScript -->
                    </select>
                </div>
                <iframe id="videoFrame" class="video-frame" allowfullscreen></iframe>
            </div>
            
            <div id="movieInfo" class="movie-info"></div>
        </div>
    </div>

    <script>
        // Server configuration
        const servers = [
            {
                name: "Server 1",
                getUrl: e => `https://vidsrc-embed.ru/embed/movie/${e}`
            },
            {
                name: "Server 2",
                getUrl: e => `https://zxcstream.xyz/player/movie/${e}`
            },
            {
                name: "Server 3",
                getUrl: e => `https://moviesapi.to/movie/${e}`
            },
            {
                name: "Server 4",
                getUrl: e => `https://vidsrc.vip/embed/movie/${e}`
            },
            {
                name: "Server 5",
                getUrl: e => `https://multiembed.mov/directstream.php?video_id=${e}&tmdb=1`
            },
            {
                name: "Server 6",
                getUrl: e => `https://vidlink.pro/movie/${e}`
            },
            {
                name: "Server 7",
                getUrl: e => `https://player.videasy.net/movie/${e}`
            },
            {
                name: "Server 8",
                getUrl: e => `https://vidfast.pro/movie/${e}?autoPlay=true`
            },
            {
                name: "Server 9",
                getUrl: e => `https://player.vidzee.wtf/embed/movie/${e}?server=1`
            },
            {
                name: "Server 10",
                getUrl: e => `https://player.vidsrc.co/embed/movie/${e}`
            }
        ];

        // TMDB API Configuration
        const TMDB_API_KEY = '<%= tmdbApiKey %>';
        const TMDB_BASE_URL = 'https://api.themoviedb.org/3';
        const TMDB_IMAGE_BASE = 'https://image.tmdb.org/t/p';

        let currentMovieId = '<%= movieId %>' || null;
        let currentServer = 0;
        let searchTimeout;

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            if (currentMovieId) {
                loadMovie(currentMovieId);
            } else {
                // Load popular movies on initial page load
                loadPopularMovies();
            }
            setupSearch();
        });

        // Setup search functionality
        function setupSearch() {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                const query = e.target.value.trim();
                
                if (query.length === 0) {
                    // Reload popular movies when search is cleared
                    if (document.getElementById('playerSection').style.display === 'none') {
                        loadPopularMovies();
                    }
                    return;
                }
                
                if (query.length < 2) {
                    document.getElementById('searchResults').innerHTML = '';
                    return;
                }
                
                searchTimeout = setTimeout(() => searchMovies(query), 500);
            });
        }

        // Load popular movies
        async function loadPopularMovies() {
            const resultsContainer = document.getElementById('searchResults');
            resultsContainer.innerHTML = '<div class="loading">Loading popular movies...</div>';
            
            try {
                // Fetch page 1 and page 2 to get 24 movies
                const [page1, page2] = await Promise.all([
                    fetch(`${TMDB_BASE_URL}/movie/popular?api_key=${TMDB_API_KEY}&language=en-US&page=1`),
                    fetch(`${TMDB_BASE_URL}/movie/popular?api_key=${TMDB_API_KEY}&language=en-US&page=2`)
                ]);
                
                const data1 = await page1.json();
                const data2 = await page2.json();
                
                const allResults = [...(data1.results || []), ...(data2.results || [])];
                
                if (allResults.length > 0) {
                    displaySearchResults(allResults.slice(0, 24));
                } else {
                    resultsContainer.innerHTML = '<div class="loading">No popular movies found</div>';
                }
            } catch (error) {
                resultsContainer.innerHTML = '<div class="error">Error loading popular movies. Please check your API key.</div>';
                console.error('Popular movies error:', error);
            }
        }

        // Search movies using TMDB API
        async function searchMovies(query) {
            const resultsContainer = document.getElementById('searchResults');
            resultsContainer.innerHTML = '<div class="loading">Searching...</div>';
            
            try {
                // Fetch page 1 and page 2 to get 24 movies
                const [page1, page2] = await Promise.all([
                    fetch(`${TMDB_BASE_URL}/search/movie?api_key=${TMDB_API_KEY}&query=${encodeURIComponent(query)}&language=en-US&page=1`),
                    fetch(`${TMDB_BASE_URL}/search/movie?api_key=${TMDB_API_KEY}&query=${encodeURIComponent(query)}&language=en-US&page=2`)
                ]);
                
                const data1 = await page1.json();
                const data2 = await page2.json();
                
                const allResults = [...(data1.results || []), ...(data2.results || [])];
                
                if (allResults.length > 0) {
                    displaySearchResults(allResults.slice(0, 24));
                } else {
                    resultsContainer.innerHTML = '<div class="loading">No results found</div>';
                }
            } catch (error) {
                resultsContainer.innerHTML = '<div class="error">Error searching movies. Please check your API key.</div>';
                console.error('Search error:', error);
            }
        }

        // Display search results
        function displaySearchResults(movies) {
            const resultsContainer = document.getElementById('searchResults');
            resultsContainer.innerHTML = movies.map(movie => `
                <div class="movie-card" onclick="selectMovie(${movie.id})">
                    <img 
                        src="${movie.poster_path ? TMDB_IMAGE_BASE + '/w200' + movie.poster_path : 'https://via.placeholder.com/200x300?text=No+Image'}" 
                        alt="${movie.title}"
                    />
                    <div class="movie-card-title">${movie.title}</div>
                </div>
            `).join('');
        }

        // Select a movie
        function selectMovie(movieId) {
            currentMovieId = movieId;
            window.history.pushState({}, '', `/movies/${movieId}`);
            document.getElementById('playerSection').style.display = 'block';
            document.getElementById('searchResults').innerHTML = '';
            document.getElementById('searchInput').value = '';
            loadMovie(movieId);
        }

        // Load movie details and setup player
        async function loadMovie(movieId) {
            try {
                // Fetch movie details from TMDB
                const response = await fetch(
                    `${TMDB_BASE_URL}/movie/${movieId}?api_key=${TMDB_API_KEY}&language=en-US`
                );
                const movie = await response.json();
                
                // Display movie information
                displayMovieInfo(movie);
                
                // Setup server buttons
                setupServerButtons(movieId);
                
                // Load first server by default
                loadServer(0, movieId);
            } catch (error) {
                document.getElementById('movieInfo').innerHTML = 
                    '<div class="error">Error loading movie details. Please check your API key.</div>';
                console.error('Load movie error:', error);
            }
        }

        // Display movie information
        function displayMovieInfo(movie) {
            const infoContainer = document.getElementById('movieInfo');
            infoContainer.innerHTML = `
                ${movie.poster_path ? `<img src="${TMDB_IMAGE_BASE}/w300${movie.poster_path}" alt="${movie.title}" class="movie-poster" />` : ''}
                <div class="movie-details">
                    <h2 class="movie-title">${movie.title}</h2>
                    ${movie.tagline ? `<p style="color: #94a3b8; font-style: italic; margin-bottom: 12px;">${movie.tagline}</p>` : ''}
                    <div style="margin-bottom: 12px;">
                        ${movie.release_date ? `<span class="badge">üìÖ ${movie.release_date.split('-')[0]}</span>` : ''}
                        ${movie.runtime ? `<span class="badge">‚è±Ô∏è ${movie.runtime} min</span>` : ''}
                        ${movie.vote_average ? `<span class="badge">‚≠ê ${movie.vote_average.toFixed(1)}/10</span>` : ''}
                    </div>
                    ${movie.genres && movie.genres.length ? `
                        <div style="margin-bottom: 12px;">
                            ${movie.genres.map(g => `<span class="badge">${g.name}</span>`).join('')}
                        </div>
                    ` : ''}
                    ${movie.overview ? `<p class="movie-overview">${movie.overview}</p>` : ''}
                </div>
            `;
        }

        // Setup server select
        function setupServerButtons(movieId) {
            const serverSelect = document.getElementById('serverSelect');
            serverSelect.innerHTML = servers.map((server, index) => `
                <option value="${index}">${server.name}</option>
            `).join('');
            
            // Add change event listener
            serverSelect.addEventListener('change', (e) => {
                loadServer(parseInt(e.target.value), movieId);
            });
            
            // Set default selection
            serverSelect.value = '0';
        }

        // Load specific server
        function loadServer(serverIndex, movieId) {
            currentServer = serverIndex;
            const videoFrame = document.getElementById('videoFrame');
            videoFrame.src = servers[serverIndex].getUrl(movieId);
        }
    </script>
</body>
</html>
